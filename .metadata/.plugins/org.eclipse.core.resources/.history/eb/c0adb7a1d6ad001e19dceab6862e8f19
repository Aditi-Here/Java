package Assignment1;

import java.util.ArrayList;

import Assignment1.Student;

public class StudentCollectionManager {

	ArrayList<Student> studentList = new ArrayList<>();

	void addStudent(Student student) {
		studentList.add(student);
	}

	void removeStudentById(int id) {
//	     Student s = new Student();
//		
//		studentList.remove(id);

		for (Student s : studentList) {
			if (s.id == id) {
				studentList.remove(s);
			}
		}
	}

	void displayStudentCollection() {
		for (Student s : studentList) {
			System.out.println(s);
		}
	}

	void displayHighestGrade() {
		System.out.println("yes");
	}

	public static void main(String[] args) {
		Student std1 = new Student();
		std1.setName("Aditi");
		std1.setId(1);
		std1.setGrade(1.0);

		Student std2 = new Student();
		std2.setName("Sam");
		std2.setId(2);
		std2.setGrade(2.0);

		Student std3 = new Student();
		std3.setName("Aaku");
		std3.setId(3);
		std3.setGrade(3.0);

		StudentCollectionManager scm = new StudentCollectionManager();
		scm.addStudent(std1);
		scm.addStudent(std2);
		scm.addStudent(std3);

		System.out.println("Display student list");

		scm.displayStudentCollection();

		scm.removeStudentById(3);

		System.out.println("Display student list");
		scm.displayStudentCollection();
	}
}
