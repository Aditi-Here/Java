package Question2;

import java.util.ArrayList;
import java.util.List;

public class Patron {

	String name;
	int id;
	List<String> booksBorrowed = new ArrayList<String>();
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	
	
	
	
	
	
	public Patron(String name, int id, Boolean booksBorrowed) {
		super();
		this.name = name;
		this.id = id;
		this.booksBorrowed = booksBorrowed;
	}
	void borrowBook(Patron p)
	{
		if(p.getBooksBorrowed())
		{
			System.out.println("Book is borrowed");
		}
	}
	void returnBook(Patron p)
	{
		if(p.getBooksBorrowed()==false)
		{
			System.out.println("Book is Returned.");
		}
	}
	void displayPatronDetails(Patron p)
	{
		System.out.println(p);
	}
}
